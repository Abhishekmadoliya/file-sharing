# Database Configuration
MONGO_URI=mongodb://localhost:27017/fileshare

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Security
# Generate a strong secret for production
JWT_SECRET=your-super-secret-jwt-key-here

# File Upload Limits
MAX_FILE_SIZE=104857600
MAX_FILES_PER_HOUR=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: MongoDB Atlas (Cloud Database)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/fileshare?retryWrites=true&w=majority

# Optional: Redis for session storage (if needed)
# REDIS_URL=redis://localhost:6379

# Optional: Cloud Storage (AWS S3, Google Cloud Storage, etc.)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name 